<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="servicefusion.com.androidcodetestjonathanfilho.MainViewModel"/>
        <import type="me.tatarka.bindingcollectionadapter2.LayoutManagers"/>
        <import type="android.view.View"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="servicefusion.com.androidcodetestjonathanfilho.MainActivity"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme" />

        <RelativeLayout
            android:id="@+id/no_contact_RL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="@{viewModel.noContactAdded ? View.VISIBLE: View.GONE }">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/none_contact_added"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_margin="10dp"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:layout_centerHorizontal="true"
                android:text="@string/add_contact"
                android:layout_below="@id/textView2"
                android:background="@drawable/add_button_background"
                android:textColor="@android:color/white"
                android:onClick="addContact"
                />
        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            app:layoutManager="@{LayoutManagers.linear()}"
            app:items="@{viewModel.items}"
            app:itemBinding="@{viewModel.itemBinding}"
            android:visibility="@{viewModel.noContactAdded ? View.GONE : View.VISIBLE }"/>

    </LinearLayout>
</layout>